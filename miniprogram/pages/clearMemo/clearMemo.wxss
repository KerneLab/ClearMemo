/* miniprogram/pages/clearMemo/clearMemo.wxss */

.table {
  display: inline-flex;
  flex-direction: column;
  border: 1rpx solid rgba(218, 218, 218, 1);
  border-bottom: 0;
  width: 100%;
}

.table-head {
  display: inline-flex;
  width: 100%;
  background: #fcfcfc;
  z-index: 1;
}

.th {
  display: flex;
  width: 100%;
  flex-direction: column;
  border: 1rpx solid #ddd;
  justify-content: center;
  align-items: center;
  overflow-x: auto;
}

.table-body {
  display: inline-flex;
  flex-direction: row;
  width: 100%;
}

.td {
  display: flex;
  flex-direction: column;
  width: 100%;
  background: none;
  border: 1rpx solid #ddd;
  border-top: 0;
  border-left: 0;
}

.week-day-date {
  display: flex;
  font-size: 20rpx;
  align-items: flex-start;
  justify-content: flex-start;
}

.week-day-item {
  display: flex;
  font-size: 18rpx;
  align-items: flex-end;
  justify-content: flex-end;
  height: 100%;
}

.scrollClass {
  display: flex;
  width: 100%;
  white-space: nowrap;
  margin-top: 23px;
  height: 100%;
  background-color: #fff;
}
